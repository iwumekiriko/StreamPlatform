@model StreamPlatform.Models.Stream

<h1>Создать новый поток</h1>

<form asp-controller="Streams" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="StreamName"></label>
        <input asp-for="StreamName" class="form-control" />
        <span asp-validation-for="StreamName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
</form>